{{!
    @template tiny_html_component/components/alert

    Template for the generated component alert to add in Tiny editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}

<div id="alert_fields">
    <div class="form-group row" id="alert_type_form-group" >
        <label for="alert_type" class="col-sm-3 col-form-label">{{#str}}alert_type, tiny_html_components{{/str}}</label>
        <div class="col-sm-9">
            <select data-holder="params" id="alert_type" name="alert_type" class="form-control">
                <option value="info">{{#str}}alert_info, tiny_html_components{{/str}}</option>
                <option value="warning">{{#str}}alert_warning, tiny_html_components{{/str}}</option>
                <option value="success">{{#str}}alert_success, tiny_html_components{{/str}}</option>
                <option value="danger">{{#str}}alert_danger, tiny_html_components{{/str}}</option>
                <option value="primary">{{#str}}alert_primary, tiny_html_components{{/str}}</option>
                <option value="secondary">{{#str}}alert_secondary, tiny_html_components{{/str}}</option>
                <option value="dark">{{#str}}alert_dark, tiny_html_components{{/str}}</option>
            </select>
        </div>
    </div>
    <div class="form-group row" id="alert_close_form-group">
        <label for="close" class="col-sm-3 col-form-label">{{#str}}alert_close, tiny_html_components{{/str}}</label>
        <div class="col-sm-9">
            <div class="form-check form-check-inline">
                <input data-holder="params" class="form-check-input" type="radio" name="close" id="close_yes" value="1">
                <label class="form-check-label" for="close_yes">{{#str}}yes{{/str}}</label>
            </div>
            <div class="form-check form-check-inline">
                <input data-holder="params" class="form-check-input" type="radio" name="close" id="close_no" value="0" checked>
                <label class="form-check-label" for="close_no">{{#str}}no{{/str}}</label>
            </div>
        </div>
    </div>
</div>
