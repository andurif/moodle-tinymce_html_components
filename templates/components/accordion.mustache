<div id="collapse_fields">
    <div class="form-group row" id="collapse_nb_form-group">
        <label for="collapse_nb" class="col-sm-3 col-form-label">{{#str}}accordion_nb, tiny_html_components{{/str}}</label>
        <div class="col-sm-9">
            <input data-holder="params" id="collapse_nb" name="collapse_nb" type="number" min="1" value="1" size="30" class="form-control"/>
        </div>
    </div>
    <div class="form-group row" id="collapse_nb_form-group">
        <span class="col-sm-3"></span>
        <label class="form-check-label col-sm-9" style="padding-left: 40px;">
            <input data-holder="params" class="form-check-input" type="checkbox" name="collapse_show" >{{#str}}accordion_show, tiny_html_components{{/str}}
        </label>
    </div>
</div>