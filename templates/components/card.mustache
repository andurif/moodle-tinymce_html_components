<div id="card_fields">
            <div class="form-group row" id="card_background_form-group">
                <label for="type" class="col-sm-3 col-form-label">{{#str}}card_background, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                    <select data-holder="options" data-select="image" data-target="card_orientation_form-group" id="card_background" name="card_background" class="form-control">
                        <option value="image">{{#str}}card_image, tiny_html_components{{/str}}</option>
                        <option value="classic">{{#str}}card_classic, tiny_html_components{{/str}}</option>;
                        <option value="info">{{#str}}alert_info, tiny_html_components{{/str}}</option>
                        <option value="warning">{{#str}}alert_warning, tiny_html_components{{/str}}</option>
                        <option value="success">{{#str}}alert_success, tiny_html_components{{/str}}</option>
                        <option value="danger">{{#str}}alert_danger, tiny_html_components{{/str}}</option>
                        <option value="primary">{{#str}}alert_primary, tiny_html_components{{/str}}</option>
                        <option value="secondary">{{#str}}alert_secondary, tiny_html_components{{/str}}</option>
                        <option value="dark">{{#str}}alert_dark, tiny_html_components{{/str}}</option>
                    </select>
                </div>
            </div>
            <div class="form-group row" id="card_display_form-group" >
                <label for="close" class="col-sm-3 col-form-label">{{#str}}card_display, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                    <div class="form-check form-check-inline">
                        <input data-holder="params" class="form-check-input" type="radio" name="card_display" id="card_display_h" value="horizontal" checked>
                        <label class="form-check-label" for="card_display_h">{{#str}}card_display_horizontal, tiny_html_components{{/str}}</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input data-holder="params" class="form-check-input" type="radio" name="card_display" id="card_display_v" value="vertical">
                        <label class="form-check-label" for="card_display_v">{{#str}}card_display_vertical, tiny_html_components{{/str}}</label>
                    </div>
                </div>
            </div>
            <div class="form-group row" id="card_orientation_form-group" data-target="card_proportion_form-group" hidden>
                <label for="close" class="col-sm-3 col-form-label">{{#str}}card_orientation, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                    <div class="form-check form-check-inline">
                        <input data-holder="options" data-target="card_proportion_form-group"  data-reset = "true" class="form-check-input" type="radio" name="card_orientation" id="card_orientation_portrait" value="portrait" checked>
                        <label class="form-check-label" for="card_orientation_portrait">{{#str}}card_orientation_portrait, tiny_html_components{{/str}}</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input data-holder="options"  data-target="card_proportion_form-group" data-reset = "false" class="form-check-input" type="radio" name="card_orientation" id="card_orientation_landscape" value="landscape">
                        <label class="form-check-label" for="card_orientation_landscape">{{#str}}card_orientation_landscape, tiny_html_components{{/str}}</label>
                    </div>
                </div>
            </div>
            <div class="form-group row" id="card_nb_form-group">
                <label for="card_nb" class="col-sm-3 col-form-label">{{#str}}card_nb, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                        <input data-holder="params" id="card_nb" name="card_nb" type="number" min="1" value="1" size="30" class="form-control" />
                </div>
            </div>
            <div class="form-group row " id="card_disposition_form-group">
                <label for="card_disposition" class="col-sm-3 col-form-label">{{#str}}card_disposition, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                    <select data-holder="params"  id="card_disposition" name="card_disposition" class="form-control col-3">
                        <option value="1">XL</option>
                        <option value="2">L </option>
                        <option value="3">M </option>
                        <option value="4">S </option>
                    </select>
                    <span style="font-style: italic;">{{#str}}card_disposition_info, tiny_html_components{{/str}}</span>
                </div>

            </div>
            <div class="form-group row d-none" id="card_proportion_form-group" hidden>
                <label for="card_proportion" class="col-sm-3 col-form-label">{{#str}}card_proportion, tiny_html_components{{/str}}</label>
                <div class="col-sm-9">
                    <select data-holder="params"  id="card_proportion" name="card_proportion" class="form-control col-3">
                        <option value="3">1/4</option>
                        <option value="4" selected>1/3</option>
                        <option value="6">1/2</option>
                    </select>
                </div>
            </div>
        </div>